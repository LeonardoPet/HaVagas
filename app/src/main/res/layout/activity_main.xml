<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cadastre seus Dados"
        android:textSize="20dp"
        android:layout_gravity="center_horizontal"/>

    <EditText
        android:id="@+id/nomeEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint = "Nome Completo"
        android:padding="5dp"
        android:layout_margin="5dp"
        />


    <EditText
        android:id="@+id/emailEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:hint = "Email"
        android:padding="5dp"
        android:layout_margin="5dp"
        />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ingressar na lista de E-mails?"/>

    <RadioGroup
        android:id="@+id/telefoneRg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <RadioButton
            android:id="@+id/comercialRb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Comercial"  />

        <RadioButton
            android:id="@+id/residencialRb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Residencial"
            android:checked="true" />
    </RadioGroup>

    <EditText
        android:id="@+id/numeroEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Ex: 12-93456-7890"
        android:inputType="number" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text = "Celular"
        android:padding="5dp"
        android:layout_margin="5dp"
        />

    <Spinner
        android:id="@+id/telefoneCelularSp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:entries="@array/telefone_celular"
        android:padding="5dp" />

    <LinearLayout
        android:id="@+id/CelularLl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:padding="5dp"
        android:visibility="gone">

        <EditText
            android:id="@+id/numeroCelularEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint = "Digite o número do seu Celular"
            android:padding="5dp"
            android:layout_margin="5dp"
            />
         </LinearLayout>

    <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text = "Sexo"
    android:padding="5dp"
    android:layout_margin="5dp"
    />

    <RadioGroup
        android:id="@+id/sexoRg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <RadioButton
            android:id="@+id/masculinoRb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Masculino" />

        <RadioButton
            android:id="@+id/femininoRb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Feminino"
            android:checked="true" />
    </RadioGroup>

    <EditText
        android:id="@+id/dataNascEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint = "Data de Nascimento"
        android:padding="5dp"
        android:layout_margin="5dp"
    />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text = "Formação"
        android:padding="5dp"
        android:layout_margin="5dp"
        />
    <LinearLayout
        android:id="@+id/formacaoMedioLl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:padding="5dp"
        android:visibility="gone">

        <EditText
            android:id="@+id/anoFormaturaEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint = "Ano de Formatura"
            android:padding="5dp"
            android:layout_margin="5dp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/SuperiorLl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:padding="5dp"
        android:visibility="gone">

        <EditText
            android:id="@+id/anoConclusaoEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint = "Ano de Conclusão"
            android:padding="5dp"
            android:layout_margin="5dp"
            />
        <EditText
            android:id="@+id/InstituicaoEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint = "Nome da Instituição"
            android:padding="5dp"
            android:layout_margin="5dp"
            />
    </LinearLayout>

    <Spinner
        android:id="@+id/formacaoSp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/formacao_academica"
        android:padding="5dp"
        android:layout_margin="5dp" />

    <LinearLayout
        android:id="@+id/mestradoDoutoradoLl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:padding="5dp"
        android:visibility="gone">

        <EditText
            android:id="@+id/anoConclusaoMDEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint = "Ano de Conclusão"
            android:padding="5dp"
            android:layout_margin="5dp"
            />
        <EditText
            android:id="@+id/InstituicaoMDEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint = "Nome da Instituição"
            android:padding="5dp"
            android:layout_margin="5dp"
            />
        <EditText
            android:id="@+id/tituloEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint = "Título de Monografia"
            android:padding="5dp"
            android:layout_margin="5dp"
            />
        <EditText
            android:id="@+id/orientadorEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint = "Orientador"
            android:padding="5dp"
            android:layout_margin="5dp"
            />
    </LinearLayout>

    <EditText
        android:id="@+id/vagaEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint = "Vaga de Interesse"
        android:padding="5dp"
        android:layout_margin="5dp"
        />

    <Button
        android:id="@+id/salvarBt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Salvar"
        android:onClick="onClick"
        android:padding="5dp"
        android:layout_margin="5dp"></Button>

    <Button
        android:id="@+id/limparBt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Limpar"
        android:onClick="onClick"
        android:padding="5dp"
        android:layout_margin="5dp"></Button>
    </LinearLayout>
</ScrollView>